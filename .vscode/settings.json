{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "index.*": true,
        "client.*": true,
        "dist": true,
        "bundle": true,
        "tmp*": true,
        "browser": true,
        "node_modules": true,
        "tsconfig.*": true,
        "tslint.*": true
    },
    "workbench.colorCustomizations": {
        "activityBar.background": "#8b31d4"
    },
    "editor.rulers": [
        100,
        120
    ],
    "html.format.wrapAttributes": "force-aligned",
    "workbench.colorTheme": "Default Light+"
}
